<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!-- @todo remove the parent when the plug-in is not part of the Geomajas project, or remove this comment -->
	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-parent</artifactId>
		<version>1.0.1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>${groupId}</groupId>
	<artifactId>${rootArtifactId}-all</artifactId>
	<version>${version}</version>
	<packaging>pom</packaging>
	<name>${pluginName} plug-in</name>
	<description>${pluginName} plug-in grouping module</description>

	<!-- @todo uncomment and fix when this module is part of the Geomajas project
	<scm>
		<connection>scm:svn:https://svn.geomajas.org/majas/trunk/plugin/${rootArtifactId}</connection>
		<developerConnection>scm:svn:https://svn.geomajas.org/majas/trunk/plugin/${rootArtifactId}</developerConnection>
		<url>https://svn.geomajas.org/majas/trunk/plugin/${rootArtifactId}</url>
	</scm>
	-->

	<!-- @todo you probably want to set the developers, otherwise it inherits from the parent if any
	<developers>
		<developer>
			<id>jd</id>
			<name>John Doe</name>
			<email>john.doe@acmee.com</email>
			<roles>
				<role>Module maintainer</role>
			</roles>
		</developer>
	</developers>
	-->

	<repositories>
		<repository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</pluginRepository>
	</pluginRepositories>

	<modules>
		<module>${rootArtifactId}</module>
		<module>${rootArtifactId}-gwt</module>
	</modules>

	<profiles>
		<profile>
			<id>documentation</id>
			<activation>
				<property>
					<name>!skipDocs</name>
				</property>
			</activation>
			<modules>
				<module>documentation</module>
			</modules>
		</profile>
	</profiles>
	
</project>
